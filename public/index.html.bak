        function loadHouses() {
            const complex = document.getElementById('complexSelect').value;
            const houseSelect = document.getElementById('houseSelect');
            const houseGroup = document.getElementById('houseGroup');
            
            if (!complex) {
                houseGroup.style.display = 'none';
                document.getElementById('apartmentGroup').style.display = 'none';
                document.getElementById('storageGroup').style.display = 'none';
                return;
            }
            
            houseGroup.style.display = 'block';
            houseSelect.innerHTML = '<option value="">-- Р’С‹Р±РµСЂРёС‚Рµ РґРѕРј --</option>';
            
            complexes[complex].forEach((house, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = `${house.address} (${house.apartments} РєРІ, ${house.storages} РєР»)`;
                houseSelect.appendChild(option);
            });
            
            document.getElementById('apartmentGroup').style.display = 'none';
            document.getElementById('storageGroup').style.display = 'none';
        }
        
        function loadApartmentInfo() {
            const complex = document.getElementById('complexSelect').value;
            const houseIndex = document.getElementById('houseSelect').value;
            
            if (!complex || houseIndex === '') {
                document.getElementById('apartmentGroup').style.display = 'none';
                document.getElementById('storageGroup').style.display = 'none';
                return;
            }
            
            const house = complexes[complex][houseIndex];
            
            document.getElementById('apartmentGroup').style.display = 'block';
            document.getElementById('storageGroup').style.display = 'block';
            document.getElementById('apartmentInput').max = house.apartments;
            document.getElementById('apartmentInput').min = 1;
            document.getElementById('apartmentHint').textContent = 
                `Р’ СЌС‚РѕРј РґРѕРјРµ РєРІР°СЂС‚РёСЂС‹ РѕС‚ 1 РґРѕ ${house.apartments}`;
        }
        
        function toggleStorage() {
            const checked = document.getElementById('hasStorageCheck').checked;
            const storageInput = document.getElementById('storageInput');
            storageInput.style.display = checked ? 'block' : 'none';
            if (!checked) {
                storageInput.value = '';
            }
        }
        
        function saveUserData() {
            const complex = document.getElementById('complexSelect').value;
            const houseIndex = document.getElementById('houseSelect').value;
            const apartment = document.getElementById('apartmentInput').value;
            const hasStorage = document.getElementById('hasStorageCheck').checked;
            const storage = hasStorage ? document.getElementById('storageInput').value : null;
            
            if (!complex) {
                alert('вќЊ Р’С‹Р±РµСЂРёС‚Рµ Р¶РёР»РѕР№ РєРѕРјРїР»РµРєСЃ!');
                return;
