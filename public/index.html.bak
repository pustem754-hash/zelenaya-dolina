        // –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ (—É–Ω–∏–∫–∞–ª—å–Ω—ã–µ –∏–º–µ–Ω–∞, –Ω–µ –∫–æ–Ω—Ñ–ª–∏–∫—Ç—É—é—Ç —Å let-–æ–±—ä—è–≤–ª–µ–Ω–∏—è–º–∏)
        let recordingTimerLegacy = null;
        let recordingStartTimeLegacy = 0;
        audioDuration = 0;

        // –ü–µ—Ä–µ–∏—Å–ø–æ–ª—å–∑—É–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ mediaStream/mediaRecorder/audioChunks/isRecording
        function cleanupAudioResources() {
            console.log('[Audio] üßπ –û—á–∏—Å—Ç–∫–∞ —Ä–µ—Å—É—Ä—Å–æ–≤ (override)...');
            if (recordingTimerLegacy) {
                clearInterval(recordingTimerLegacy);
                recordingTimerLegacy = null;
            }
            if (typeof audioTimer !== 'undefined' && audioTimer) {
                clearInterval(audioTimer);
                audioTimer = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                try { mediaRecorder.stop(); } catch (e) { console.warn('[Audio] stop error', e); }
            }
            mediaRecorder = null;
            if (mediaStream) {
                try {
                    mediaStream.getTracks().forEach(t => t.stop());
                } catch (e) { console.warn('[Audio] stream stop error', e); }
            }
            mediaStream = null;
            if (typeof audioChunks !== 'undefined') audioChunks = [];
            if (typeof savedAudioBlob !== 'undefined') savedAudioBlob = null;
            if (typeof audioStartTime !== 'undefined') audioStartTime = null;
            isRecording = false;
            recordingStartTimeLegacy = 0;
            audioDuration = 0;
        }

        async function recordAudio() {
            console.log('[Audio] üé§ start record (override)');
            cleanupAudioResources();
            try {
                mediaStream = await navigator.mediaDevices.getUserMedia({ audio: true });
                const mimeType = MediaRecorder.isTypeSupported('audio/webm')
                    ? 'audio/webm'
                    : MediaRecorder.isTypeSupported('audio/mp4')
                        ? 'audio/mp4'
                        : 'audio/ogg';
                mediaRecorder = new MediaRecorder(mediaStream, { mimeType });
                audioChunks = [];
                mediaRecorder.ondataavailable = e => { if (e.data.size > 0) audioChunks.push(e.data); };
                mediaRecorder.onstop = () => saveAudioRecording(audioDuration);
                mediaRecorder.start();
                isRecording = true;
                recordingStartTimeLegacy = Date.now();
                recordingTimerLegacy = setInterval(() => {
                    const elapsed = Math.floor((Date.now() - recordingStartTimeLegacy) / 1000);
                    audioDuration = elapsed;
                    const m = String(Math.floor(elapsed / 60)).padStart(2, '0');
                    const s = String(elapsed % 60).padStart(2, '0');
                    const timerEl = document.getElementById('recordingTimer');
                    if (timerEl) timerEl.textContent = `${m}:${s}`;
                    if (elapsed >= 60) {
                        stopAudioRecording();
                        showNotification('‚úÖ –î–æ—Å—Ç–∏–≥–Ω—É—Ç–∞ –º–∞–∫—Å–∏–º–∞–ª—å–Ω–∞—è –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –∑–∞–ø–∏—Å–∏ (60 —Å–µ–∫)', 'success');
                    }
                }, 1000);
                const btn = document.getElementById('audioBtn');
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                if (btn) btn.style.display = 'none';
                if (controls) controls.style.display = 'block';
                if (preview) preview.style.display = 'none';
            } catch (err) {
                console.error('[Audio] error getUserMedia', err);
                showNotification('‚ùå –û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ –º–∏–∫—Ä–æ—Ñ–æ–Ω—É: ' + err.message, 'error');
                cleanupAudioResources();
            }
        }

        function stopAudioRecording() {
            console.log('[Audio] üõë stop record (override)');
            if (recordingTimerLegacy) {
                clearInterval(recordingTimerLegacy);
                recordingTimerLegacy = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                isRecording = false;
                mediaRecorder.stop();
            }
            if (mediaStream) mediaStream.getTracks().forEach(t => t.stop());
        }

        function saveAudioRecording(durationSeconds) {
            console.log('[Audio] üíæ save (override), duration:', durationSeconds);
            const audioBlob = new Blob(audioChunks || [], { type: 'audio/webm' });
            const audioUrl = URL.createObjectURL(audioBlob);
            const reader = new FileReader();
            reader.onloadend = () => {
                const base64Audio = reader.result;
                localStorage.setItem('audioData', base64Audio);
                localStorage.setItem('audioDuration', durationSeconds);
                const audioPlayer = document.getElementById('audioPlayer');
                if (audioPlayer) audioPlayer.src = audioUrl;
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                if (controls) controls.style.display = 'none';
                if (preview) preview.style.display = 'block';
                showNotification('‚úÖ –ê—É–¥–∏–æ–∑–∞–ø–∏—Å—å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞', 'success');
            };
            reader.readAsDataURL(audioBlob);
        }

        function toggleAudio() {
            console.log('[Audio] toggle (override), isRecording:', isRecording);
            if (isRecording) stopAudioRecording(); else recordAudio();
        }

        function deleteAudio() {
            console.log('[Audio] delete (override)');
            localStorage.removeItem('audioData');
            localStorage.removeItem('audioDuration');
            const audioPlayer = document.getElementById('audioPlayer');
            if (audioPlayer) audioPlayer.src = '';
            const preview = document.getElementById('audioPreview');
            const btn = document.getElementById('audioBtn');
            if (preview) preview.style.display = 'none';
            if (btn) btn.style.display = 'block';
            cleanupAudioResources();
            showNotification('‚úÖ –ê—É–¥–∏–æ–∑–∞–ø–∏—Å—å —É–¥–∞–ª–µ–Ω–∞', 'success');
        }

