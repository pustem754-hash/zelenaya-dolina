            if (houseIndex === '') {
                alert('вќЊ Р’С‹Р±РµСЂРёС‚Рµ РґРѕРј!');
                return;
            }
            
            if (!apartment) {
                alert('вќЊ Р’РІРµРґРёС‚Рµ РЅРѕРјРµСЂ РєРІР°СЂС‚РёСЂС‹!');
                return;
