            const house = complexes[complex][houseIndex];
            
            if (parseInt(apartment) < 1 || parseInt(apartment) > house.apartments) {
                alert(`вќЊ РљРІР°СЂС‚РёСЂР° РґРѕР»Р¶РЅР° Р±С‹С‚СЊ РѕС‚ 1 РґРѕ ${house.apartments}`);
