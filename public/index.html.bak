                recordingTimer = null;
            }
            if (audioTimer) {
                clearInterval(audioTimer);
                audioTimer = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                try { mediaRecorder.stop(); } catch (e) { console.warn('[Audio] stop error', e); }
            }
            mediaRecorder = null;
            if (mediaStream) {
                try {
                    mediaStream.getTracks().forEach(t => t.stop());
                } catch (e) { console.warn('[Audio] stream stop error', e); }
            }
            mediaStream = null;
            audioChunks = [];
            isRecording = false;
            window.isRecording = false;
            audioDuration = 0;
            audioStartTime = null;
            savedAudioBlob = null;
        }
        
        async function recordAudio() {
            console.log('[Audio] рџЋ¤ start record');
            cleanupAudioResources();
            try {
                mediaStream = await navigator.mediaDevices.getUserMedia({ audio: true });
                
                let mimeType = 'audio/webm;codecs=opus';
                if (!MediaRecorder.isTypeSupported(mimeType)) {
                    mimeType = 'audio/webm';
                    if (!MediaRecorder.isTypeSupported(mimeType)) {
                        mimeType = 'audio/mp4';
                        if (!MediaRecorder.isTypeSupported(mimeType)) {
                            mimeType = '';
                        }
                    }
                }
                console.log('[Audio] mimeType:', mimeType || 'default');
                
                const options = mimeType ? { mimeType } : {};
                mediaRecorder = new MediaRecorder(mediaStream, options);
                audioChunks = [];
                audioStartTime = Date.now();
                
                mediaRecorder.ondataavailable = (event) => {
                    if (event.data && event.data.size > 0) audioChunks.push(event.data);
                };
                
                mediaRecorder.onstop = () => {
                    const duration = Math.round((Date.now() - audioStartTime) / 1000);
                    audioDuration = duration;
                    const blob = new Blob(audioChunks, { type: 'audio/webm' });
                    saveAudioRecording(blob, duration);
                };
                
                mediaRecorder.onerror = (event) => {
                    console.error('[Audio] MediaRecorder error:', event.error);
                    showNotification('вќЊ РћС€РёР±РєР° Р·Р°РїРёСЃРё: ' + event.error.message, 'error');
                    cleanupAudioResources();
                };
                
                mediaRecorder.start();
                isRecording = true;
                window.isRecording = true;
                
                const btn = document.getElementById('audioBtn');
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                if (btn) { btn.style.opacity = '0'; btn.style.pointerEvents = 'none'; }
                if (controls) {
                    controls.style.display = 'block';
                    setTimeout(() => {
                        controls.style.opacity = '1';
                        controls.style.pointerEvents = 'auto';
                    }, 50);
                }
                if (preview) {
                    preview.style.opacity = '0';
                    preview.style.pointerEvents = 'none';
                }
                
                const timerEl = document.getElementById('recordingTimer');
                recordingTimer = setInterval(() => {
                    const elapsed = Math.floor((Date.now() - audioStartTime) / 1000);
                    audioDuration = elapsed;
                    const m = String(Math.floor(elapsed / 60)).padStart(2, '0');
                    const s = String(elapsed % 60).padStart(2, '0');
                    if (timerEl) timerEl.textContent = `${m}:${s}`;
                    if (elapsed >= 60) {
                        stopAudioRecording();
                        showNotification('вЏ±пёЏ Р”РѕСЃС‚РёРіРЅСѓС‚Р° РјР°РєСЃРёРјР°Р»СЊРЅР°СЏ РґР»РёС‚РµР»СЊРЅРѕСЃС‚СЊ (60 СЃРµРєСѓРЅРґ)', 'warning');
                    }
                }, 1000);
                
            } catch (error) {
                console.error('[Audio] getUserMedia error:', error);
                showNotification('вќЊ РћС€РёР±РєР° РґРѕСЃС‚СѓРїР° Рє РјРёРєСЂРѕС„РѕРЅСѓ: ' + error.message, 'error');
                cleanupAudioResources();
            }
        }
        
        function stopAudioRecording() {
            console.log('[Audio] рџ›‘ stop record');
            if (recordingTimer) {
                clearInterval(recordingTimer);
                recordingTimer = null;
            }
            if (audioTimer) {
                clearInterval(audioTimer);
                audioTimer = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                isRecording = false;
                window.isRecording = false;
                mediaRecorder.stop();
            }
            if (mediaStream) {
                mediaStream.getTracks().forEach(track => track.stop());
            }
        }
        
        function saveAudioRecording(blob, durationSeconds) {
            console.log('[Audio] рџ’ѕ save recording');
            const audioUrl = URL.createObjectURL(blob);
            const reader = new FileReader();
            reader.onloadend = () => {
                const base64Audio = reader.result;
                localStorage.setItem('audioData', base64Audio);
                localStorage.setItem('audioDuration', durationSeconds);
                
                const audioPlayer = document.getElementById('audioPlayer');
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                const btn = document.getElementById('audioBtn');
                
                if (audioPlayer) audioPlayer.src = audioUrl;
                
                if (controls) {
                    controls.style.opacity = '0';
                    controls.style.pointerEvents = 'none';
                    setTimeout(() => { controls.style.display = 'none'; }, 300);
                }
                if (preview) {
                    preview.style.display = 'block';
                    setTimeout(() => {
                        preview.style.opacity = '1';
                        preview.style.pointerEvents = 'auto';
                    }, 50);
                }
                if (btn) {
                    btn.style.opacity = '0';
                    btn.style.pointerEvents = 'none';
                }
                
                showNotification('вњ… РђСѓРґРёРѕР·Р°РїРёСЃСЊ СЃРѕС…СЂР°РЅРµРЅР°', 'success');
            };
            reader.readAsDataURL(blob);
        }
        
