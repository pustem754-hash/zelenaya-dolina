        function displayUserInfo(data) {
            const userInfoCard = document.getElementById('userInfoCard');
            const userComplex = document.getElementById('userComplex');
            const userHouse = document.getElementById('userHouse');
            const userApartment = document.getElementById('userApartment');
            const userStorage = document.getElementById('userStorage');
            const userStorageInfo = document.getElementById('userStorageInfo');
            
            if (userInfoCard && userComplex && userHouse && userApartment) {
                userComplex.textContent = data.complex;
                userHouse.textContent = data.house;
                userApartment.textContent = `РєРІ. ${data.apartment}`;
                
                if (data.storage) {
                    userStorage.textContent = `РєР». ${data.storage}`;
                    if (userStorageInfo) userStorageInfo.style.display = 'block';
                } else {
