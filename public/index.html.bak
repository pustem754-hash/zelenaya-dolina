        /* ===========================================
           РђРЈР”РРћР—РђРџРРЎР¬ v6.6.1 (СѓРЅРёС„РёС†РёСЂРѕРІР°РЅРЅС‹Р№ override)
           =========================================== */
        // Р”РѕРїРѕР»РЅРёС‚РµР»СЊРЅС‹Рµ РїРµСЂРµРјРµРЅРЅС‹Рµ (СѓРЅРёРєР°Р»СЊРЅС‹Рµ РёРјРµРЅР°, РЅРµ РєРѕРЅС„Р»РёРєС‚СѓСЋС‚ СЃ let-РѕР±СЉСЏРІР»РµРЅРёСЏРјРё)
        let recordingTimerLegacy = null;
        let recordingStartTimeLegacy = 0;
        audioDuration = 0;

        // РџРµСЂРµРёСЃРїРѕР»СЊР·СѓРµРј СЃСѓС‰РµСЃС‚РІСѓСЋС‰РёРµ mediaStream/mediaRecorder/audioChunks/isRecording
        function cleanupAudioResources() {
            console.log('[Audio] рџ§№ РћС‡РёСЃС‚РєР° СЂРµСЃСѓСЂСЃРѕРІ (override)...');
            if (recordingTimerLegacy) {
                clearInterval(recordingTimerLegacy);
                recordingTimerLegacy = null;
            }
            if (typeof audioTimer !== 'undefined' && audioTimer) {
                clearInterval(audioTimer);
                audioTimer = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                try { mediaRecorder.stop(); } catch (e) { console.warn('[Audio] stop error', e); }
            }
            mediaRecorder = null;
            if (mediaStream) {
                try {
                    mediaStream.getTracks().forEach(t => t.stop());
                } catch (e) { console.warn('[Audio] stream stop error', e); }
            }
            mediaStream = null;
            if (typeof audioChunks !== 'undefined') audioChunks = [];
            if (typeof savedAudioBlob !== 'undefined') savedAudioBlob = null;
            if (typeof audioStartTime !== 'undefined') audioStartTime = null;
            isRecording = false;
            recordingStartTimeLegacy = 0;
            audioDuration = 0;
        }

        async function recordAudio() {
            console.log('[Audio] рџЋ¤ start record (override)');
            cleanupAudioResources();
            try {
                mediaStream = await navigator.mediaDevices.getUserMedia({ audio: true });
                const mimeType = MediaRecorder.isTypeSupported('audio/webm')
                    ? 'audio/webm'
                    : MediaRecorder.isTypeSupported('audio/mp4')
                        ? 'audio/mp4'
                        : 'audio/ogg';
                mediaRecorder = new MediaRecorder(mediaStream, { mimeType });
                audioChunks = [];
                mediaRecorder.ondataavailable = e => { if (e.data.size > 0) audioChunks.push(e.data); };
                mediaRecorder.onstop = () => saveAudioRecording(audioDuration);
                mediaRecorder.start();
                isRecording = true;
                recordingStartTimeLegacy = Date.now();
                recordingTimerLegacy = setInterval(() => {
                    const elapsed = Math.floor((Date.now() - recordingStartTimeLegacy) / 1000);
                    audioDuration = elapsed;
                    const m = String(Math.floor(elapsed / 60)).padStart(2, '0');
                    const s = String(elapsed % 60).padStart(2, '0');
                    const timerEl = document.getElementById('recordingTimer');
                    if (timerEl) timerEl.textContent = `${m}:${s}`;
                    if (elapsed >= 60) {
                        stopAudioRecording();
                        showNotification('вњ… Р”РѕСЃС‚РёРіРЅСѓС‚Р° РјР°РєСЃРёРјР°Р»СЊРЅР°СЏ РґР»РёС‚РµР»СЊРЅРѕСЃС‚СЊ Р·Р°РїРёСЃРё (60 СЃРµРє)', 'success');
                    }
                }, 1000);
                const btn = document.getElementById('audioBtn');
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                if (btn) btn.style.display = 'none';
                if (controls) controls.style.display = 'block';
                if (preview) preview.style.display = 'none';
            } catch (err) {
                console.error('[Audio] error getUserMedia', err);
                showNotification('вќЊ РћС€РёР±РєР° РґРѕСЃС‚СѓРїР° Рє РјРёРєСЂРѕС„РѕРЅСѓ: ' + err.message, 'error');
                cleanupAudioResources();
            }
        }

        function stopAudioRecording() {
            console.log('[Audio] рџ›‘ stop record (override)');
            if (recordingTimerLegacy) {
                clearInterval(recordingTimerLegacy);
                recordingTimerLegacy = null;
            }
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
                isRecording = false;
                mediaRecorder.stop();
            }
            if (mediaStream) mediaStream.getTracks().forEach(t => t.stop());
        }

        function saveAudioRecording(durationSeconds) {
            console.log('[Audio] рџ’ѕ save (override), duration:', durationSeconds);
            const audioBlob = new Blob(audioChunks || [], { type: 'audio/webm' });
            const audioUrl = URL.createObjectURL(audioBlob);
            const reader = new FileReader();
            reader.onloadend = () => {
                const base64Audio = reader.result;
                localStorage.setItem('audioData', base64Audio);
                localStorage.setItem('audioDuration', durationSeconds);
                const audioPlayer = document.getElementById('audioPlayer');
                if (audioPlayer) audioPlayer.src = audioUrl;
                const controls = document.getElementById('audioControls');
                const preview = document.getElementById('audioPreview');
                if (controls) controls.style.display = 'none';
                if (preview) preview.style.display = 'block';
                showNotification('вњ… РђСѓРґРёРѕР·Р°РїРёСЃСЊ СЃРѕС…СЂР°РЅРµРЅР°', 'success');
            };
            reader.readAsDataURL(audioBlob);
        }

        function toggleAudio() {
            console.log('[Audio] toggle (override), isRecording:', isRecording);
            if (isRecording) stopAudioRecording(); else recordAudio();
        }

        function deleteAudio() {
            console.log('[Audio] delete (override)');
            localStorage.removeItem('audioData');
            localStorage.removeItem('audioDuration');
            const audioPlayer = document.getElementById('audioPlayer');
            if (audioPlayer) audioPlayer.src = '';
            const preview = document.getElementById('audioPreview');
            const btn = document.getElementById('audioBtn');
            if (preview) preview.style.display = 'none';
            if (btn) btn.style.display = 'block';
            cleanupAudioResources();
            showNotification('вњ… РђСѓРґРёРѕР·Р°РїРёСЃСЊ СѓРґР°Р»РµРЅР°', 'success');
        }

        function initializeAudioTab() {
            console.log('[Audio] init audio tab');
            cleanupAudioResources();
            const savedAudio = localStorage.getItem('audioData');
            const audioBtn = document.getElementById('audioBtn');
            const audioControls = document.getElementById('audioControls');
            const audioPreview = document.getElementById('audioPreview');
            const audioPlayer = document.getElementById('audioPlayer');
            
            if (savedAudio && audioPlayer) {
                audioPlayer.src = savedAudio;
                if (audioBtn) { audioBtn.style.opacity = '0'; audioBtn.style.pointerEvents = 'none'; }
                if (audioControls) { audioControls.style.display = 'none'; }
                if (audioPreview) { audioPreview.style.display = 'block'; audioPreview.style.opacity = '1'; audioPreview.style.pointerEvents = 'auto'; }
            } else {
                if (audioBtn) { audioBtn.style.opacity = '1'; audioBtn.style.pointerEvents = 'auto'; }
                if (audioControls) { audioControls.style.display = 'none'; }
                if (audioPreview) { audioPreview.style.display = 'none'; audioPreview.style.opacity = '0'; audioPreview.style.pointerEvents = 'none'; }
            }
            
            const btn = document.getElementById('audioBtn');
            if (btn) {
                btn.removeEventListener('click', toggleAudio);
                btn.addEventListener('click', toggleAudio);
                console.log('[Audio] вњ… audioBtn РїСЂРёРІСЏР·Р°РЅ');
            }
            
            const stopBtn = document.getElementById('stopRecordingBtn');
            if (stopBtn) {
                stopBtn.removeEventListener('click', stopAudioRecording);
                stopBtn.addEventListener('click', stopAudioRecording);
                console.log('[Audio] вњ… РћР±СЂР°Р±РѕС‚С‡РёРє stopBtn РїСЂРёРІСЏР·Р°РЅ');
            }
            
            const deleteBtn = document.getElementById('deleteAudioBtn');
            if (deleteBtn) {
                deleteBtn.removeEventListener('click', deleteAudio);
                deleteBtn.addEventListener('click', deleteAudio);
                console.log('[Audio] вњ… РћР±СЂР°Р±РѕС‚С‡РёРє deleteBtn РїСЂРёРІСЏР·Р°РЅ');
            }
            
            console.log('[Audio] init complete');
        }

        // Р—Р°РіР»СѓС€РєР° РґР»СЏ СЃРїРёСЃРєР° Р°СѓРґРёРѕ (РЅРѕРІС‹Р№ UI С…СЂР°РЅРёС‚ РѕРґРЅСѓ Р·Р°РїРёСЃСЊ)
