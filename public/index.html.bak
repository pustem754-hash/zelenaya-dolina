        function renderRecentRequests(requests) {
            const container = document.getElementById('recentRequestsList');
            if (!container) return;
            
            if (requests.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999; padding: 20px;">РќРµС‚ Р°РєС‚РёРІРЅС‹С… Р·Р°СЏРІРѕРє</p>';
                return;
            }
            
            container.innerHTML = requests.slice(0, 3).map(request => {
                const statusClass = request.status === 'new' ? 'created' : 
                                   request.status === 'in_progress' ? 'in_progress' : 'completed';
                const statusName = request.status === 'new' ? 'РќРѕРІР°СЏ' :
                                  request.status === 'in_progress' ? 'Р’ СЂР°Р±РѕС‚Рµ' : 'Р—Р°РІРµСЂС€РµРЅР°';
                const typeIcon = request.type === 'plumbing' ? 'рџ”§' :
                               request.type === 'electric' ? 'вљЎ' :
                               request.type === 'cleaning' ? 'рџ§№' : 'рџ“ќ';
                
                return `
                    <div class="request-item status-${request.status}" onclick="showRequestDetails('${request.id}')" style="cursor: pointer;">
                        <div class="request-header">
                            <div style="flex: 1;">
                                <div class="request-title">${typeIcon} ${request.title}</div>
                                <div class="request-info">${new Date(request.createdAt).toLocaleDateString('ru-RU')}</div>
