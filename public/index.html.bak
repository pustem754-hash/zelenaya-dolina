        async function handleVideoFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const sizeInMB = file.size / (1024 * 1024);
            if (sizeInMB > 5) {
                alert(`‚ùå –í–∏–¥–µ–æ —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–µ (${sizeInMB.toFixed(2)} –ú–ë). –ú–∞–∫—Å–∏–º—É–º 5 –ú–ë.`);
                return;
            }
            
            await saveVideoToStorage(file);
            event.target.value = '';
        }
        
        async function saveVideoToStorage(videoBlob) {
            try {
                const reader = new FileReader();
                
                reader.onloadend = function() {
                    const base64Video = reader.result;
                    
                    const sizeInMB = (base64Video.length * 0.75) / (1024 * 1024);
                    if (sizeInMB > 5) {
                        alert('‚ùå –í–∏–¥–µ–æ —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–µ (> 5 –ú–ë).');
