        async function toggleVideoRecording() {
            const btn = document.getElementById('recordVideoBtn');
            const statusDiv = document.getElementById('videoRecordingStatus');
            
            if (!isRecordingVideo) {
                try {
                    videoStream = await navigator.mediaDevices.getUserMedia({
                        video: { facingMode: 'environment' },
                        audio: true
                    });
                    
                    // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã–π mimeType —Å fallback
                    let videoMimeType = 'video/webm;codecs=vp8,opus';
                    if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                        videoMimeType = 'video/webm;codecs=vp8';
                        if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                            videoMimeType = 'video/webm';
                            if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                                videoMimeType = 'video/mp4';
                                if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                                    videoMimeType = ''; // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ–æ—Ä–º–∞—Ç –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –±—Ä–∞—É–∑–µ—Ä–∞
                                }
                            }
                        }
                    }
                    console.log('üé• –ò—Å–ø–æ–ª—å–∑—É–µ–º—ã–π video mimeType:', videoMimeType || 'default');
                    
                    const options = videoMimeType ? { mimeType: videoMimeType } : {};
                    try {
                        videoRecorder = new MediaRecorder(videoStream, options);
                    } catch (e) {
                        console.warn('‚ö†Ô∏è –û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è MediaRecorder —Å options, –ø—Ä–æ–±—É–µ–º –±–µ–∑ options:', e);
                        videoRecorder = new MediaRecorder(videoStream);
                    }
                    videoChunks = [];
                    videoStartTime = Date.now();
                    
                    videoRecorder.ondataavailable = (event) => {
                        if (event.data && event.data.size > 0) {
                            videoChunks.push(event.data);
                        }
                    };
                    
                    videoRecorder.onerror = (event) => {
                        console.error('‚ùå –û—à–∏–±–∫–∞ MediaRecorder:', event.error);
                        alert('‚ùå –û—à–∏–±–∫–∞ –∑–∞–ø–∏—Å–∏ –≤–∏–¥–µ–æ: ' + (event.error?.message || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞'));
                        resetVideoRecording();
                        if (videoStream) {
                            videoStream.getTracks().forEach(track => track.stop());
                        }
                    };
                    
                    videoRecorder.onstop = async () => {
                        const videoBlob = new Blob(videoChunks, { type: 'video/webm' });
                        
                        if (videoBlob.size > 5 * 1024 * 1024) {
                            alert('‚ùå –í–∏–¥–µ–æ —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–µ (> 5 –ú–ë). –ó–∞–ø–∏—à–∏—Ç–µ –∫–æ—Ä–æ—á–µ.');
                            videoStream.getTracks().forEach(track => track.stop());
                            resetVideoRecording();
                            return;
                        }
                        
                        await saveVideoToStorage(videoBlob);
                        
                        videoStream.getTracks().forEach(track => track.stop());
                        
                        // –°–∫—Ä—ã—Ç—å —Å—Ç–∞—Ç—É—Å (–ë–ï–ó –ü–†–´–ñ–ö–û–í!)
                        statusDiv.style.opacity = '0';
                        statusDiv.style.pointerEvents = 'none';
                        
                        resetVideoRecording();
                    };
                    
                    videoRecorder.start();
                    isRecordingVideo = true;
                    
                    btn.textContent = '‚èπÔ∏è –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –∑–∞–ø–∏—Å—å';
                    btn.style.background = '#e74c3c';
                    
                    // –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç—É—Å (–ë–ï–ó –ü–†–´–ñ–ö–û–í!)
                    statusDiv.style.opacity = '1';
                    statusDiv.style.pointerEvents = 'auto';
                    
                    // –¢–∞–π–º–µ—Ä
                    videoTimer = setInterval(() => {
                        const elapsed = Math.round((Date.now() - videoStartTime) / 1000);
                        const minutes = Math.floor(elapsed / 60).toString().padStart(2, '0');
                        const seconds = (elapsed % 60).toString().padStart(2, '0');
                        document.getElementById('videoTimer').textContent = `${minutes}:${seconds}`;
                        
                        // –ê–≤—Ç–æ—Å—Ç–æ–ø —á–µ—Ä–µ–∑ 30 —Å–µ–∫—É–Ω–¥
                        if (elapsed >= 30) {
                            toggleVideoRecording();
                            alert('‚è∞ –î–æ—Å—Ç–∏–≥–Ω—É—Ç –ª–∏–º–∏—Ç –∑–∞–ø–∏—Å–∏ (30 —Å–µ–∫—É–Ω–¥)');
                        }
                    }, 1000);
                    
                } catch (error) {
                    alert('‚ùå –û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ –∫–∞–º–µ—Ä–µ: ' + error.message);
                    console.error('–û—à–∏–±–∫–∞ –∫–∞–º–µ—Ä—ã:', error);
                    resetVideoRecording();
                }
            } else {
                if (videoRecorder && videoRecorder.state === 'recording') {
                    videoRecorder.stop();
                }
            }
        }
        
        function resetVideoRecording() {
