        function playAudio(id) {
            console.log('в–¶пёЏ Р’РѕСЃРїСЂРѕРёР·РІРµРґРµРЅРёРµ Р°СѓРґРёРѕ ID:', id);
            const audioList = JSON.parse(localStorage.getItem('audio') || '[]');
            const audio = audioList.find(a => a.id === id);
            
            if (!audio) {
                console.error('вќЊ РђСѓРґРёРѕ РЅРµ РЅР°Р№РґРµРЅРѕ');
                return;
            }
            
            // РЎРѕР·РґР°С‚СЊ СЃРєСЂС‹С‚С‹Р№ audio СЌР»РµРјРµРЅС‚
            if (currentAudioElement) {
                currentAudioElement.pause();
                currentAudioElement = null;
            }
            
            currentAudioElement = new Audio(audio.data);
            currentAudioId = id;
            
            // РџРѕРєР°Р·Р°С‚СЊ РјРѕРґР°Р»СЊРЅРѕРµ РѕРєРЅРѕ
            const modal = document.getElementById('audioModal');
            if (modal) {
                modal.style.display = 'flex';
                
                // РћР±РЅРѕРІРёС‚СЊ РІСЂРµРјСЏ
                const updateTime = () => {
                    if (!currentAudioElement) return;
                    
                    const current = Math.floor(currentAudioElement.currentTime);
                    const total = Math.floor(currentAudioElement.duration || 0);
                    
                    document.getElementById('audioCurrentTime').textContent = formatTime(current);
                    document.getElementById('audioTotalTime').textContent = formatTime(total);
                    
                    const progress = total > 0 ? (current / total) * 100 : 0;
                    document.getElementById('audioProgressBar').style.width = progress + '%';
                };
                
                currentAudioElement.addEventListener('timeupdate', updateTime);
                currentAudioElement.addEventListener('loadedmetadata', updateTime);
                
                currentAudioElement.addEventListener('ended', () => {
                    document.getElementById('audioPlayPauseBtn').textContent = 'в–¶';
                });
                
                // РљРЅРѕРїРєРё СѓРїСЂР°РІР»РµРЅРёСЏ
                document.getElementById('audioPlayPauseBtn').onclick = () => {
                    if (currentAudioElement.paused) {
                        currentAudioElement.play();
                        document.getElementById('audioPlayPauseBtn').textContent = 'вЏё';
                    } else {
                        currentAudioElement.pause();
                        document.getElementById('audioPlayPauseBtn').textContent = 'в–¶';
                    }
                };
                
                document.getElementById('audioRewindBtn').onclick = () => {
                    if (currentAudioElement) {
                        currentAudioElement.currentTime = Math.max(0, currentAudioElement.currentTime - 5);
                    }
                };
                
                document.getElementById('audioForwardBtn').onclick = () => {
                    if (currentAudioElement) {
                        currentAudioElement.currentTime = Math.min(currentAudioElement.duration, currentAudioElement.currentTime + 5);
                    }
                };
                
                currentAudioElement.play();
                document.getElementById('audioPlayPauseBtn').textContent = 'вЏё';
            }
        }
        
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return mins + ':' + (secs < 10 ? '0' : '') + secs;
        }
        
