        async function toggleVideoRecording() {
            const btn = document.getElementById('recordVideoBtn');
            const statusDiv = document.getElementById('videoRecordingStatus');
            
            if (!isRecordingVideo) {
                try {
                    videoStream = await navigator.mediaDevices.getUserMedia({
                        video: { facingMode: 'environment' },
                        audio: true
                    });
                    
                    // РћРїСЂРµРґРµР»СЏРµРј РїРѕРґРґРµСЂР¶РёРІР°РµРјС‹Р№ mimeType СЃ fallback
                    let videoMimeType = 'video/webm;codecs=vp8,opus';
                    if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                        videoMimeType = 'video/webm;codecs=vp8';
                        if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                            videoMimeType = 'video/webm';
                            if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                                videoMimeType = 'video/mp4';
                                if (!MediaRecorder.isTypeSupported(videoMimeType)) {
                                    videoMimeType = ''; // РСЃРїРѕР»СЊР·СѓРµРј С„РѕСЂРјР°С‚ РїРѕ СѓРјРѕР»С‡Р°РЅРёСЋ Р±СЂР°СѓР·РµСЂР°
                                }
                            }
                        }
                    }
                    console.log('рџЋҐ РСЃРїРѕР»СЊР·СѓРµРјС‹Р№ video mimeType:', videoMimeType || 'default');
                    
                    const options = videoMimeType ? { mimeType: videoMimeType } : {};
                    try {
                        videoRecorder = new MediaRecorder(videoStream, options);
                    } catch (e) {
                        console.warn('вљ пёЏ РћС€РёР±РєР° СЃРѕР·РґР°РЅРёСЏ MediaRecorder СЃ options, РїСЂРѕР±СѓРµРј Р±РµР· options:', e);
                        videoRecorder = new MediaRecorder(videoStream);
                    }
                    videoChunks = [];
                    videoStartTime = Date.now();
                    
                    videoRecorder.ondataavailable = (event) => {
                        if (event.data && event.data.size > 0) {
                            videoChunks.push(event.data);
                        }
                    };
                    
                    videoRecorder.onerror = (event) => {
                        console.error('вќЊ РћС€РёР±РєР° MediaRecorder:', event.error);
                        alert('вќЊ РћС€РёР±РєР° Р·Р°РїРёСЃРё РІРёРґРµРѕ: ' + (event.error?.message || 'РќРµРёР·РІРµСЃС‚РЅР°СЏ РѕС€РёР±РєР°'));
                        resetVideoRecording();
                        if (videoStream) {
                            videoStream.getTracks().forEach(track => track.stop());
                        }
                    };
                    
                    videoRecorder.onstop = async () => {
                        const videoBlob = new Blob(videoChunks, { type: 'video/webm' });
                        
                        if (videoBlob.size > 5 * 1024 * 1024) {
                            alert('вќЊ Р’РёРґРµРѕ СЃР»РёС€РєРѕРј Р±РѕР»СЊС€РѕРµ (> 5 РњР‘). Р—Р°РїРёС€РёС‚Рµ РєРѕСЂРѕС‡Рµ.');
                            videoStream.getTracks().forEach(track => track.stop());
                            resetVideoRecording();
                            return;
                        }
                        
                        await saveVideoToStorage(videoBlob);
                        
                        videoStream.getTracks().forEach(track => track.stop());
                        
                        // РЎРєСЂС‹С‚СЊ СЃС‚Р°С‚СѓСЃ (Р‘Р•Р— РџР Р«Р–РљРћР’!)
                        statusDiv.style.opacity = '0';
                        statusDiv.style.pointerEvents = 'none';
                        
                        resetVideoRecording();
                    };
                    
                    videoRecorder.start();
                    isRecordingVideo = true;
                    
                    btn.textContent = 'вЏ№пёЏ РћСЃС‚Р°РЅРѕРІРёС‚СЊ Р·Р°РїРёСЃСЊ';
                    btn.style.background = '#e74c3c';
                    
                    // РџРѕРєР°Р·Р°С‚СЊ СЃС‚Р°С‚СѓСЃ (Р‘Р•Р— РџР Р«Р–РљРћР’!)
                    statusDiv.style.opacity = '1';
                    statusDiv.style.pointerEvents = 'auto';
                    
                    // РўР°Р№РјРµСЂ
                    videoTimer = setInterval(() => {
                        const elapsed = Math.round((Date.now() - videoStartTime) / 1000);
                        const minutes = Math.floor(elapsed / 60).toString().padStart(2, '0');
                        const seconds = (elapsed % 60).toString().padStart(2, '0');
                        document.getElementById('videoTimer').textContent = `${minutes}:${seconds}`;
                        
                        // РђРІС‚РѕСЃС‚РѕРї С‡РµСЂРµР· 30 СЃРµРєСѓРЅРґ
                        if (elapsed >= 30) {
                            toggleVideoRecording();
                            alert('вЏ° Р”РѕСЃС‚РёРіРЅСѓС‚ Р»РёРјРёС‚ Р·Р°РїРёСЃРё (30 СЃРµРєСѓРЅРґ)');
                        }
                    }, 1000);
                    
                } catch (error) {
                    alert('вќЊ РћС€РёР±РєР° РґРѕСЃС‚СѓРїР° Рє РєР°РјРµСЂРµ: ' + error.message);
                    console.error('РћС€РёР±РєР° РєР°РјРµСЂС‹:', error);
                    resetVideoRecording();
                }
            } else {
                if (videoRecorder && videoRecorder.state === 'recording') {
                    videoRecorder.stop();
                }
            }
        }
        
        function resetVideoRecording() {
            isRecordingVideo = false;
            
            const btn = document.getElementById('recordVideoBtn');
            if (btn) {
                btn.textContent = 'рџЋҐ Р—Р°РїРёСЃР°С‚СЊ РІРёРґРµРѕ';
                btn.style.background = '#9b59b6';
            }
            
            if (videoTimer) {
                clearInterval(videoTimer);
                videoTimer = null;
            }
            
            videoStartTime = null;
        }
        
        async function handleVideoFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const sizeInMB = file.size / (1024 * 1024);
            if (sizeInMB > 5) {
                alert(`вќЊ Р’РёРґРµРѕ СЃР»РёС€РєРѕРј Р±РѕР»СЊС€РѕРµ (${sizeInMB.toFixed(2)} РњР‘). РњР°РєСЃРёРјСѓРј 5 РњР‘.`);
                return;
            }
            
            await saveVideoToStorage(file);
            event.target.value = '';
        }
        
        async function saveVideoToStorage(videoBlob) {
            try {
                const reader = new FileReader();
                
                reader.onloadend = function() {
                    const base64Video = reader.result;
                    
                    const sizeInMB = (base64Video.length * 0.75) / (1024 * 1024);
                    if (sizeInMB > 5) {
                        alert('вќЊ Р’РёРґРµРѕ СЃР»РёС€РєРѕРј Р±РѕР»СЊС€РѕРµ (> 5 РњР‘).');
                        return;
                    }
                    
                    let videos = JSON.parse(localStorage.getItem('videos') || '[]');
                    
                    if (videos.length >= 2) {
                        alert('РњРѕР¶РЅРѕ Р·Р°РіСЂСѓР·РёС‚СЊ РјР°РєСЃРёРјСѓРј 2 РІРёРґРµРѕ. РЈРґР°Р»РёС‚Рµ СЃС‚Р°СЂРѕРµ РІРёРґРµРѕ.');
                        return;
                    }
                    
                    const videoData = {
                        id: Date.now(),
                        data: base64Video,
                        timestamp: new Date().toISOString(),
                        size: sizeInMB.toFixed(2) + ' РњР‘',
                        date: new Date().toLocaleString('ru-RU')
                    };
                    
                    videos.push(videoData);
                    localStorage.setItem('videos', JSON.stringify(videos));
                    
                    renderVideos();
                    
                    console.log('вњ… Р’РёРґРµРѕ СЃРѕС…СЂР°РЅРµРЅРѕ');
                };
                
                reader.onerror = function() {
                    console.error('вќЊ РћС€РёР±РєР° РєРѕРЅРІРµСЂС‚Р°С†РёРё РІРёРґРµРѕ');
                    alert('РћС€РёР±РєР° СЃРѕС…СЂР°РЅРµРЅРёСЏ РІРёРґРµРѕ');
                };
                
                reader.readAsDataURL(videoBlob);
            } catch (error) {
                console.error('РћС€РёР±РєР° СЃРѕС…СЂР°РЅРµРЅРёСЏ РІРёРґРµРѕ:', error);
                alert('РћС€РёР±РєР° СЃРѕС…СЂР°РЅРµРЅРёСЏ РІРёРґРµРѕ');
            }
        }

