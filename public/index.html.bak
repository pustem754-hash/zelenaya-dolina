                        return;
                    }
                    
                    const videoData = {
                        id: Date.now(),
                        data: base64Video,
                        timestamp: new Date().toISOString(),
                        size: sizeInMB.toFixed(2) + ' –ú–ë',
                        date: new Date().toLocaleString('ru-RU')
                    };
                    
                    videos.push(videoData);
